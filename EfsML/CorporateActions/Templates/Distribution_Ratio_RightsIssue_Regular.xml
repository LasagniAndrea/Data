<?xml version="1.0" encoding="UTF-8" ?>
<procedures xmlns="http://www.efs.org/2007/EFSmL-3-0"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xmlns:ecoreB="http://www.eclipse.org/emf/2002/Ecore"
                xsi:schemaLocation="http://www.efs.org/2007/EFSmL-3-0 ../Schemas/EfsML-CorporateActions-3-0.xsd">
  <underlyers>
    <underlyer>
      <componentMethod id="cumPrice">
        <description>Cum price Trading day</description>
        <method>
          <name>CumPriceTradingDay</name>
        </method>
      </componentMethod>
    </underlyer>
  </underlyers>
  <ratio>
    <description>Rights issue</description>
    <methodType>Ratio</methodType>
    <takePlace>
      <componentReference href="ratioFactor" name="takePlace" id="valueSubscriptionRights_r1"/>
      <condition>LessThanOne</condition>
    </takePlace>
    <rFactor>
      <componentFormula  id="ratioFactor" name="R">
        <description>Adjustment ratio</description>
        <formula>
          <mathExpression>(((h*P)+(S+d)*r)/(h+r))/P</mathExpression>
          <componentReference href="cumPrice" name="P" id="cumPrice_r1"/>
          <component id="dividend" name="d" >
            <description>Dividend</description>
            <result>
              <unit>0</unit>
            </result>
          </component>
          <component id="subPrice" name="S" >
            <description>Subscription price</description>
            <result>
              <amount/>
            </result>
          </component>
          <component id="nbEligibleShares" name="h">
            <description>Shares as eligible for the entitlement</description>
            <result>
              <unit>0</unit>
            </result>
          </component>
          <component id="nbEntitlementShares" name="r">
            <description>New shares as the entitlement</description>
            <result>
              <unit>0</unit>
            </result>
          </component>
        </formula>
      </componentFormula>
    </rFactor>
    <contract>
      <!-- Add Ratio XML -->
    </contract>
  </ratio>
</procedures>

