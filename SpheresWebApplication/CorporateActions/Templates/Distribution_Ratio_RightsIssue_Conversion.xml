<?xml version="1.0" encoding="UTF-8" ?>
<procedures xmlns="http://www.efs.org/2007/EFSmL-3-0"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xmlns:ecoreB="http://www.eclipse.org/emf/2002/Ecore"
                xsi:schemaLocation="http://www.efs.org/2007/EFSmL-3-0 ../Schemas/EfsML-CorporateActions-3-0.xsd">
  <underlyers>
    <underlyer>
      <componentMethod id="cumPrice">
        <description>Cum price Trading day</description>
        <method>
          <name>CumPriceTradingDay</name>
        </method>
      </componentMethod>
    </underlyer>
  </underlyers>
  <ratio>
    <description>Rights issue</description>
    <methodType>Ratio</methodType>
    <takePlace>
      <componentReference href="valueSubscriptionRights" name="takePlace" id="valueSubscriptionRights_r1"/>
      <condition>PositiveValue</condition>
    </takePlace>
    <rFactor>
      <componentFormula  id="ratioFactor" name="R">
        <description>Adjustment ratio</description>
        <formula>
          <mathExpression>(P-TS)/P</mathExpression>
          <componentReference href="cumPrice" name="P" id="cumPrice_r1"/>
          <componentFormula id="valueSubscriptionRights" name="TS">
            <description>Theoritical value of subscription price</description>
            <formula>
              <description>By conversion</description>
              <mathExpression>(P-C)*((r*NOM/C)/(h+(r*NOM/C)))+(I/h)</mathExpression>
              <componentReference href="cumPrice" name="P" id="cumPrice_r2"/>
              <component id="convPrice" name="C" >
                <description>Conversion Price</description>
                <result>
                  <amount/>
                </result>
              </component>
              <component id="nominalValue" name="NOM" >
                <description>Nominal value</description>
                <result>
                  <amount/>
                </result>
              </component>
              <component id="cashSettlement" name="I" >
                <description>Fixed interest amount per receive</description>
                <result>
                  <amount/>
                </result>
              </component>
              <component id="cumSubRights" name="h" >
                <description>Cum entitlement subscription rights</description>
                <result>
                  <unit>0</unit>
                </result>
              </component>
              <component id="exSubRights" name="r" >
                <description>Ex entitlement subscription rights</description>
                <result>
                  <unit>0</unit>
                </result>
              </component>
            </formula>
          </componentFormula>
        </formula>
      </componentFormula>
    </rFactor>
    <contract>
      <!-- Add Ratio XML -->
    </contract>
  </ratio>
</procedures>
