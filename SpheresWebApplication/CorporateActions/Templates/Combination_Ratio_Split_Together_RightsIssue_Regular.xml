<?xml version="1.0" encoding="UTF-8" ?>
<procedures xmlns="http://www.efs.org/2007/EFSmL-3-0"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xmlns:ecoreB="http://www.eclipse.org/emf/2002/Ecore"
                xsi:schemaLocation="http://www.efs.org/2007/EFSmL-3-0 ../Schemas/EfsML-CorporateActions-3-0.xsd">
  <underlyers>
    <underlyer>
      <componentMethod id="cumPrice">
        <description>Cum price Trading day</description>
        <method>
          <name>CumPriceTradingDay</name>
        </method>
      </componentMethod>
    </underlyer>
  </underlyers>
  <ratio>
    <description>Stock Split and Rights issue (neither action is applicable to other)</description>
    <methodType>Ratio</methodType>
    <rFactor>
      <componentFormula  id="ratioFactor" name="R">
        <description>Adjustment ratio</description>
        <formula>
          <mathExpression>((h*P)+(S*r2))/(P*(h+r1+r2))</mathExpression>
          <componentReference href="cumPrice" name="P" id="cumPrice_r1"/>
          <component id="nbCumShares" name="h" >
            <description>Nb shares held</description>
            <result>
              <unit>0</unit>
            </result>
          </component>
          <component id="nbRighOfferingShares" name="r1" >
            <description>New Shares from right offerings for every shares held</description>
            <result>
              <unit>0</unit>
            </result>
          </component>
          <component id="nbDistributionShares" name="r2" >
            <description>New Shares from distribution for every shares held</description>
            <result>
              <unit>0</unit>
            </result>
          </component>
          <component id="subPrice" name="S" >
            <description>Subscription price</description>
            <result>
              <amount/>
            </result>
          </component>
        </formula>
      </componentFormula>
    </rFactor>
    <contract>
      <!-- Add Ratio XML -->
    </contract>
  </ratio>
</procedures>
